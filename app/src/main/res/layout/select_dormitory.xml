<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="#4ecbdc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/mainIntroduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选择宿舍"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/btn_update"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/update"/>

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_update"
            android:layout_centerVertical="true"
            android:src="@drawable/share"/>


    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:text="剩余床位信息"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="5号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building5"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="5个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="8号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building8"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="8个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="9号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building9"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="9个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="13号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building13"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="13个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="14号楼"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/building14"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="14个"
                android:textSize="20sp"
                android:textColor="#160202"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/one1"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="单人办理"
            android:textColor="#160202"
            android:textSize="25sp" />
        <Button
            android:id="@+id/two2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dad8d8"
            android:text="双人办理"
            android:textColor="#160202"
            android:textSize="25sp" />
        <Button
            android:id="@+id/three3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffeff"
            android:text="三人办理"
            android:textColor="#160202"
            android:textSize="25sp" />
        <Button
            android:id="@+id/four4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccc6c6"
            android:text="四人办理"
            android:textColor="#160202"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>